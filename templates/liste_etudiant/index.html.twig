                                        <i class="bi bi-pencil"></i>
                                    </button>
                                </a>
                                <a href="{{ path('app_show_payment', {'id' :etudiant.id}) }}" title="Payments">
                                    <button type="submit" class="btn btn-info">
                                        <i class="bi bi-list"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-md-1"></div>
        </div>
</div>
    {% endif %}
{% endblock %}
