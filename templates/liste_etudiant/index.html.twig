            <h3>No student recorded !! ðŸ˜‘ðŸ˜‘</h3>
        {% else %}
    </div>
        <div class="row">
            <div class="col-md-1"></div>
            <div class="">
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                    <tr>
                        <th>Matricule</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Date naissance</th>
                        <th>SpÃ©cialitÃ©</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for etudiant in etudiants %}
                        <tr>
                            <td>{{ etudiant.matriculeEtudiant }}</td>
                            <td>{{ etudiant.nomEtudiant }}</td>
                            <td>{{ etudiant.prenomEtudiant }}</td>
                            <td>{{ etudiant.dateNaissance|date('d/m/y') }}</td>
                            <td>{{ etudiant.codeSpecialite.libellespecialite }}</td>
                            <td>
                                <form method="post" action="{{ path('app_supprimer_etudiant', {'id': etudiant.id}) }}" onclick="return confirm('Voulez-vous vraiment supprimer cet Ã©tudiant?')">
