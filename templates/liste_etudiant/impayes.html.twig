                            <th>Remaining</th>
                            <th>Total fees</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for etudiant in etudiants %}
                        <tr>
                            <td>
                                {{ etudiant.matricule_etudiant }}
                            </td>
                            <td>
                                {{ etudiant.nom_etudiant ~ ' ' ~ etudiant.prenom_etudiant }}
                            </td>
                            <td>
                                {{ etudiant.libelle_specialite }}
                            </td>
                            <td>
                                {{ etudiant.total_paye|default(0) }} FCFA
                            </td>
                            <td>
                                <b>{{ etudiant.fee - etudiant.total_paye }} FCFA</b>
