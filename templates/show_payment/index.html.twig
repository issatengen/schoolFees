{% extends 'base.html.twig' %}

{% block title %}PAyments{% endblock %}

{% block body %}
<div class="container example-wrapper">
    <div class="row">
        <div class="col-md-8 mt-4">
            <h6 class="h3 text-dark">
                Payments of the student <span class="text-primary-emphasis"> {{ etudiant.nomEtudiant }} {{ etudiant.prenomEtudiant }} </h3> of <h3> {{ etudiant.codeSpecialite.libelleSpecialite }}  </span>
            </h6>
        </div>
        <div class="col-md-4">
            <a href="{{ path('app_payment_new') }}">
                <button class="btn btn-success m-4">
                    <i class="bi bi-plus-circle-dotted"></i>
                    <span>Create new</span>
                </button>
            </a>
            <a href="{{ path('app_liste_etudiant') }}">
                <button class="btn btn-primary m-4">
                    <i class="bi bi-arrow-left-circle"></i>
                    <span>Retour</span>
                </button>
            </a>
        </div>
    </div>
    <hr>
    <div class="bg-danger text-center text-light pt-3">
    </div>
    <div class="bg-white">
        <div class="bg-danger text-center">
            {% if payments is empty %}
                <h2>No payment found!! ðŸ˜‘ðŸ˜‘</h2>
            {% else %}
        </div>
        <div class="rounded-4">
            <div class="p-4 bg-light mb-2">
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Total Fee</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for payment in payments %}
                        <tr>
                            <td>
                                {{ payment.date|date('Y-m-d') }}
                            </td>
                            <td>
                                {{ payment.amount }} FCFA
                            </td>
                             <td>
                                {{ etudiant.codeSpecialite.fee }} FCFA
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
